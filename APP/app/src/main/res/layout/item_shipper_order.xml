<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/ff_surface"
    app:strokeColor="@color/ff_border"
    app:strokeWidth="1dp"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.FastFood.Medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Row 1: Order code + status chip -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_order_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="#FF0001"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/ff_text_primary"
                android:maxLines="1"
                android:ellipsize="end"/>

            <LinearLayout
                android:id="@+id/layout_status_chip"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"
                android:background="@drawable/bg_status_chip">

                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:tint="@color/ff_warning"
                    android:src="@drawable/ic_status_inprogress"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chưa nhận"
                    android:textColor="@color/ff_warning"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginStart="6dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2: Items brief -->
        <TextView
            android:id="@+id/tv_items_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1x Trà sữa, 2x Bánh mì…"
            android:textColor="@color/ff_text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Row 3: total + time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="125.000 đ"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/ff_text_primary"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:32 • Hôm nay"
                android:textColor="@color/ff_text_muted"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/ff_divider"/>

        <!-- Row 4: Actions (two lines for compactness on small screens) -->
        <!-- Line A: Nhận đơn / Đã tới quán / Đã lấy hàng -->
        <LinearLayout
            android:id="@+id/layout_actions_line_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_accept"
                style="@style/Widget.FastFood.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="0dp"
                android:text="Nhận đơn"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_arrived"
                style="@style/Widget.FastFood.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="0dp"
                android:text="Đã tới quán"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_picked"
                style="@style/Widget.FastFood.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="0dp"
                android:text="Đã lấy hàng"
                android:textAllCaps="false"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Line B: Đang giao / Đã giao / Thất bại -->
        <LinearLayout
            android:id="@+id/layout_actions_line_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_on_the_way"
                style="@style/Widget.FastFood.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="0dp"
                android:text="Đang giao"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delivered"
                style="@style/Widget.FastFood.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="0dp"
                android:text="Đã giao"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_failed"
                style="@style/Widget.FastFood.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="0dp"
                android:text="Hủy đơn"
                android:textAllCaps="false"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
