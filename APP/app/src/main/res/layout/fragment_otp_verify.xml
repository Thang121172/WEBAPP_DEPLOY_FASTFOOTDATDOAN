<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/ff_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_email"
            style="@style/Widget.FastFood.TextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/et_email"
            app:endIconMode="none"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email"
                style="@style/Widget.FastFood.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:autofillHints="emailAddress"
                android:importantForAutofill="yes"
                android:maxLines="1"
                android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_otp"
            style="@style/Widget.FastFood.TextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/otp_enter_prompt"
            app:layout_constraintTop_toBottomOf="@id/til_email"
            app:layout_constraintStart_toStartOf="@id/til_email"
            app:layout_constraintEnd_toEndOf="@id/til_email"
            app:counterEnabled="true"
            app:counterMaxLength="6">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_otp_code"
                style="@style/Widget.FastFood.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="6"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:fontFamily="monospace"
                android:imeOptions="actionDone"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_new_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/et_new_password"
            android:textSize="13sp"
            android:textColor="@color/ff_text_secondary"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/til_otp"
            app:layout_constraintStart_toStartOf="@id/til_otp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_new_password"
            style="@style/Widget.FastFood.TextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:endIconMode="password_toggle"
            app:layout_constraintTop_toBottomOf="@id/tv_new_password_label"
            app:layout_constraintStart_toStartOf="@id/tv_new_password_label"
            app:layout_constraintEnd_toEndOf="@id/til_otp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_new_password"
                style="@style/Widget.FastFood.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1"
                android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_confirm_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/et_confirm_password"
            android:textSize="13sp"
            android:textColor="@color/ff_text_secondary"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/til_new_password"
            app:layout_constraintStart_toStartOf="@id/til_new_password"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_confirm_password"
            style="@style/Widget.FastFood.TextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:endIconMode="password_toggle"
            app:layout_constraintTop_toBottomOf="@id/tv_confirm_password_label"
            app:layout_constraintStart_toStartOf="@id/tv_confirm_password_label"
            app:layout_constraintEnd_toEndOf="@id/til_new_password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_confirm_password"
                style="@style/Widget.FastFood.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1"
                android:imeOptions="actionDone"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/inputs_bottom_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:barrierAllowsGoneWidgets="true"
            app:constraint_referenced_ids="til_otp,til_confirm_password"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/ff_text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/inputs_bottom_barrier"
            app:layout_constraintStart_toStartOf="@id/til_otp"
            app:layout_constraintEnd_toEndOf="@id/til_otp" />

        <TextView
            android:id="@+id/tv_resend_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/ff_text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_status"
            app:layout_constraintStart_toStartOf="@id/tv_status"
            app:layout_constraintEnd_toEndOf="@id/tv_status" />

        <ProgressBar
            android:id="@+id/progress_loading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_resend_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_verify"
            style="@style/Widget.FastFood.Button.Outlined"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/btn_verify"
            app:layout_constraintTop_toBottomOf="@id/progress_loading"
            app:layout_constraintStart_toStartOf="@id/til_otp"
            app:layout_constraintEnd_toEndOf="@id/til_otp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_resend"
            style="@style/Widget.FastFood.Button.Outlined"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/otp_resend"
            app:layout_constraintTop_toBottomOf="@id/btn_verify"
            app:layout_constraintStart_toStartOf="@id/til_otp"
            app:layout_constraintEnd_toEndOf="@id/til_otp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>