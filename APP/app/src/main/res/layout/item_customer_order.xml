<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/ff_surface"
    app:strokeColor="@color/ff_border"
    app:strokeWidth="1dp"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.FastFood.Medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Row 1: Order code + status chip -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_order_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/ff_text_primary"
                tools:text="#FF1024" />

            <LinearLayout
                android:id="@+id/layout_status_chip"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"
                android:background="@drawable/bg_status_chip">

                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:tint="@color/ff_warning"
                    android:contentDescription="@string/status_icon_content_desc"
                    android:src="@drawable/ic_status_inprogress" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ff_warning"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginStart="6dp"
                    tools:text="chờ xử lý" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2: Items brief -->
        <TextView
            android:id="@+id/tv_items_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ff_text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            tools:text="1x Trà sữa, 2x Bánh mì…" />

        <!-- Row 3: total + time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/ff_text_primary"
                tools:text="125.000 đ" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ff_text_muted"
                android:textSize="12sp"
                tools:text="14:32 • Hôm nay" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/ff_divider"/>

        <!-- Row 4: Actions (Customer) -->
        <!-- Quy ước: 
             - btn_cancel: hiển thị khi pending
             - btn_track: hiển thị khi in_progress (đang xử lý/giao)
             - btn_reorder: hiển thị khi completed/cancelled -->
        <LinearLayout
            android:id="@+id/layout_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/Widget.FastFood.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/order_cancel"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_track"
                style="@style/Widget.FastFood.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/order_track"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reorder"
                style="@style/Widget.FastFood.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/order_reorder"
                android:textAllCaps="false"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
