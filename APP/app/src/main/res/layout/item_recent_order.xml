<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="220dp"
    android:layout_height="120dp"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/ff_surface"
    app:strokeColor="@color/ff_border"
    app:strokeWidth="1dp"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.FastFood.Medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_order_status"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:tint="@color/ff_text_secondary"
                android:src="@drawable/ic_status_inprogress" />

            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="-"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/ff_text_secondary" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_order_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="#------"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/ff_text_primary" />

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="--:-- • --/--"
            android:textSize="12sp"
            android:textColor="@color/ff_text_muted" />

        <TextView
            android:id="@+id/tv_order_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="0 đ"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/ff_text_primary" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
