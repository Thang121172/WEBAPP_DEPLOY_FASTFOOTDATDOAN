<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/ff_surface"
    app:strokeColor="@color/ff_border"
    app:strokeWidth="1dp"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.FastFood.Medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Hàng 1: Mã đơn + chip trạng thái -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_order_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/ff_text_primary"
                tools:text="#FF0001" />

            <LinearLayout
                android:id="@+id/layout_status_chip"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"
                android:background="@drawable/bg_status_chip">

                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:tint="@color/ff_warning"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_status_inprogress" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ff_warning"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginStart="6dp"
                    tools:text="chờ xác nhận" />
            </LinearLayout>
        </LinearLayout>

        <!-- Hàng 2: danh sách món rút gọn -->
        <TextView
            android:id="@+id/tv_items_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ff_text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            tools:text="1x Trà sữa trân châu, 2x Bánh mì gà…" />

        <!-- Hàng 3: tổng tiền + thời gian -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/ff_text_primary"
                tools:text="125.000 đ" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ff_text_muted"
                android:textSize="12sp"
                tools:text="14:32 • Hôm nay" />
        </LinearLayout>

        <!-- Hàng 4: nút hành động -->
        <LinearLayout
            android:id="@+id/layout_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reject"
                style="@style/Widget.FastFood.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Từ chối"
                android:textAllCaps="false" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_accept"
                style="@style/Widget.FastFood.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Xác nhận"
                android:textAllCaps="false" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ready"
                style="@style/Widget.FastFood.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Sẵn sàng"
                android:textAllCaps="false"
                android:visibility="gone" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_complete"
                style="@style/Widget.FastFood.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Hoàn tất"
                android:textAllCaps="false"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
