<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance.FastFood.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Widget.FastFood.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="backgroundTint">@color/ff_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/ff_ripple_light</item>
        <item name="iconTint">@color/white</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.FastFood.Medium</item>
    </style>

    <style name="Widget.FastFood.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="strokeColor">@color/ff_green</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/ff_surface</item>
        <item name="android:textColor">@color/ff_green</item>
        <item name="rippleColor">@color/ff_ripple_dark</item>
        <item name="iconTint">@color/ff_green</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.FastFood.Medium</item>
    </style>

    <style name="Widget.FastFood.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/ff_surface</item>
        <item name="boxStrokeColor">@color/ff_border</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/ff_text_secondary</item>
        <item name="android:textColorHint">@color/ff_text_muted</item>
        <item name="errorTextColor">@color/ff_error</item>
        <item name="helperTextTextColor">@color/ff_text_muted</item>
        <item name="endIconTint">@color/ff_text_secondary</item>
        <item name="startIconTint">@color/ff_text_secondary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.FastFood.Medium</item>
    </style>

    <style name="Widget.FastFood.EditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/ff_text_primary</item>
        <item name="android:textColorHint">@color/ff_text_muted</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.FastFood.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/ff_surface</item>
        <item name="strokeColor">@color/ff_border</item>
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.FastFood.Medium</item>
        <item name="rippleColor">@color/ff_ripple_dark</item>
    </style>

    <style name="Widget.FastFood.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/ff_text_muted</item>
        <item name="itemTextColor">@color/ff_text_muted</item>
        <item name="itemRippleColor">@color/ff_ripple_dark</item>
        <item name="backgroundTint">@color/ff_surface</item>
    </style>

    <style name="Widget.FastFood.PrimaryButton" parent="Widget.FastFood.Button.Primary"/>
    <style name="Widget.FastFood.OutlinedButton" parent="Widget.FastFood.Button.Outlined"/>

</resources>