# =========================================================
# FastFood Production Environment Variables
# =========================================================
# Copy this file to .env and fill in your values

# =========================================================
# DJANGO SETTINGS
# =========================================================
DJANGO_SETTINGS_MODULE=core.settings.prod
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production-min-50-chars
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# =========================================================
# DATABASE (PostgreSQL)
# =========================================================
# Option 1: Use DATABASE_URL (for Render, Railway, etc.)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Option 2: Use individual variables (for VPS/Docker)
POSTGRES_DB=fastfood
POSTGRES_USER=app
POSTGRES_PASSWORD=your-strong-database-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# =========================================================
# CORS (Frontend URLs)
# =========================================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =========================================================
# REDIS
# =========================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-optional

# =========================================================
# CELERY
# =========================================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# =========================================================
# FRONTEND
# =========================================================
VITE_API_BASE=https://yourdomain.com/api

# =========================================================
# SSL (for Django SSL redirect - only if not using Nginx)
# =========================================================
USE_SSL_REDIRECT=False

# =========================================================
# EMAIL (for OTP, notifications)
# =========================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# =========================================================
# PAYMENT GATEWAY (if applicable)
# =========================================================
# VNPAY_TMN_CODE=your-tmn-code
# VNPAY_HASH_SECRET=your-hash-secret
# VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html

# =========================================================
# SENTRY (Error tracking - optional)
# =========================================================
# SENTRY_DSN=your-sentry-dsn

